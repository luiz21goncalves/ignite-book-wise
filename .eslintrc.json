{
  "extends": ["next/core-web-vitals", "plugin:react-perf/recommended","@rocketseat/eslint-config/react"],
  "plugins": ["eslint-plugin-import-helpers", "react-perf"],
  "rules": {
    "react/self-closing-comp": "error",
    "import-helpers/order-imports": ["warn", {
      "newlinesBetween": "always",
      "groups": [
        ["/^next/", "/^react/"],
        "module",
        "/^@\//",
        ["parent", "sibling", "index"]
      ],
      "alphabetize": { "order": "asc", "ignoreCase": true }
    }]
  }
}
